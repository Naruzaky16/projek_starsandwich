            color: white;
        }

        .wa { background: #B1D0A9; }
        .ig { background: #F6A5C0; }
        .twitter { background: #9DC8F0; }
        .shopee { background: #F4C07A; }
        .tt { background: #abb8c3; }
        .email { background: #cf2e2e }

        .card a {
            display: flex;
            justify-content: center;
            align-items: center;
            background: white;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            font-size: 28px;
            margin-bottom: 8px;
        }

        #map {
            height: 300px;
            width: 1000px;
            margin: 25px auto;
            border-radius: 25px;
            border: 10px solid maroon;
            background-color: rgb(0, 0, 0);
            display: block;
        }

        .back-circle {
            position: fixed;
            top: 20px;
            left: 20px;
            width: 50px;
            height: 50px;
            background-color: maroon;
            color: white;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            z-index: 9999;
            transition: 0.2s;
        }

        .back-circle:hover {
            background-color: #a00000;
            transform: scale(1.1);
        }

    </style>
</head>

